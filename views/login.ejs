<%- include('partials/header.ejs'); %>

<div class="container dataBlock">
    <% if(err) { %>
        <p>ERROR: INVALID LOG IN</p>
    <% }; %>
    <form action="/login" method="post">
        <div class="form-group">
            <label for="logIn">Enter Customer Username:</label>
            <input type="text" class="form-control" name="username" id="logIn" placeholder="username" required>
        </div>
        <div class="form-group">
            <label for="password">Enter Customer Password:</label>
            <input type="password" class="form-control" name="password" id="password" placeholder="password" required>
        </div>
        <button type="submit" class="btn btn-primary">Sign in</button>
    </form>
    
</div>


<%- include('partials/footer.ejs'); %>